@page "{id:int}"
@model Website.Pages.Admin.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<form method="post">
    <div>
        <p>Are you sure you want to delete this product?</p>
        <input type="hidden" asp-for="Product.Id" />
        <div>
            @Model.Product.Name
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>