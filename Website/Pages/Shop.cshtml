@page
@model Website.Pages.ShopModel
@{
    ViewData["Title"] = "Shop";
}

<h2>Shop</h2>

<form method="get">
    <input type="text" name="searchQuery" value="@Model.SearchQuery" placeholder="Search products..." />
    <button type="submit">Search</button>
</form>

<div class="product-list">
    @foreach (var product in Model.Products)
    {
        <div class="product-item">
            <img src="~/HomeImage/@product.image" alt="@product.Name">
            <h4>@product.Name - $@product.Price</h4>
            <p>@product.Description</p>
            <form method="post" asp-page-handler="AddToCart">
                <input type="hidden" name="productId" value="@product.Id" />
                <input type="number" name="quantity" value="1" min="1" /> <!-- Quantity input field -->
                <button type="submit">Add to Cart</button>
            </form>
        </div>
    }
</div>

<style>
    .product-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 20px;
    }

    .product-item {
        background-color: #50C878; /* Emerald color */
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 15px;
        margin: 10px;
        width: 200px;
        box-sizing: border-box;
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .product-item img {
            display: block;
            margin: 0 auto 10px;
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 5px;
        }

        .product-item h4 {
            font-size: 1.2em;
            margin: 10px 0;
            color: #fff; /* White text color for better contrast */
        }

        .product-item p {
            font-size: 0.9em;
            color: #fff; /* White text color for better contrast */
        }

        .product-item form {
            margin-top: 10px;
        }

        .product-item button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 15px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .product-item button:hover {
                background-color: #0056b3;
            }

        .product-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
</style>