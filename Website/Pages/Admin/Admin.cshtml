@page
@model Website.Pages.Admin.AdminModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Admin";
}

<h2>Add New Item</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Name:</label>
        <input asp-for="NewItem.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Description:</label>
        <input asp-for="NewItem.Description" class="form-control" />
    </div>
    <div class="form-group">
        <label>Price:</label>
        <input asp-for="NewItem.Price" class="form-control" />
    </div>
    <div class="form-group">
        <label>Image:</label>
        <input asp-for="NewItem.Image" type="file" class="form-control" />
    </div>
    <div class="form-group">
        <label>Category:</label>
        <select asp-for="NewItem.CategoryId" class="form-control">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Item</button>
    </div>
</form>

<h2>Delete Item</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.Category.Name</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@product.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>