@page
@model Website.Pages.Admin.AdminModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Admin";
}

<h2>Admin - Manage Products</h2>

<a asp-page="Create">Create New Product</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@product.Id">Edit</a> |
                    <form method="post" asp-page-handler="Delete" asp-route-id="@product.Id" onsubmit="return confirm('Are you sure you want to delete this product?');">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>